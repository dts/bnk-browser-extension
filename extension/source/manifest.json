{
  "id": "doaldmiaeepjopefcjliakaclpijkfnp",
	"name": "BNK Browser Extension",
	"version": "0.0.1",
	"description": "An awesome new browser extension",
	"homepage_url": "https://github.com/dts/bnk-browser-extension",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "awesome-extension@notlmn.github.io",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
  "browser_action": {
    "browser_style": true,
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png"
    }
  },
  "externally_connectable": {
    "matches": ["http://localhost:2999/*"]
  },
	"permissions": [
		"storage",
    "tabs",
    "webNavigation",
    "https://api.bnk.dev/"
	],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
  "background": {
		"persistent": false,
		"scripts": [
			"browser-polyfill.min.js",
			"background.js"
		]
	}
}
